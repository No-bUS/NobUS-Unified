<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NobUS.Frontend.MAUI.Presentation.View.StationListView"
             xmlns:local="using:NobUS.Frontend.MAUI.Presentation.View">
    <ListView x:Name="ListView" SelectionMode='None' SeparatorVisibility='None' HasUnevenRows='True'>
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <local:StationView
                                       ViewModel="{x:Binding  Path=.}"
                                       Padding="0,0,0,10" />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentView>