<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    x:Class="NobUS.Frontend.MAUI.Presentation.View.StationListView"
    xmlns:local="using:NobUS.Frontend.MAUI.Presentation.View"
    xmlns:viewModel="using:NobUS.Frontend.MAUI.Presentation.ViewModel"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
>
    <ListView
        x:Name="ListView"
        HasUnevenRows="True"
        SelectionMode="None"
        SeparatorVisibility="None"
        VerticalScrollBarVisibility="Never"
    >
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="viewModel:StationViewModel">
                <ViewCell>
                    <local:StationView
                        Padding="0,0,0,10"
                        ViewModel="{x:Binding Path=., Source={RelativeSource AncestorType={x:Type viewModel:StationViewModel},AncestorLevel=1}}"
                    />
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentView>
