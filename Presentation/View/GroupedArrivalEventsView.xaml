<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:model="clr-namespace:NobUS.DataContract.Model;assembly=NobUS.DataContract.Model"
    xmlns:viewModel="clr-namespace:NobUS.Frontend.MAUI.Presentation.ViewModel"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="NobUS.Frontend.MAUI.Presentation.View.GroupedArrivalEventsView"
    x:DataType="viewModel:GroupedArrivalEventsViewModel"
    BindingContext="{x:Binding .,Source={RelativeSource AncestorType={x:Type viewModel:GroupedArrivalEventsViewModel}, AncestorLevel=1}}"
>
    <Grid ColumnDefinitions="auto,*">
        <Label
            FontSize="{StaticResource Base}"
            Grid.Column="0"
            Text="{x:Binding Path=.RouteName}"
            TextColor="{StaticResource OnSecondaryContainer}"
        />
        <FlexLayout
            AlignItems="Start"
            BindableLayout.ItemsSource="{x:Binding Path=.ArrivalEvents}"
            Direction="Row"
            Grid.Column="1"
            Wrap="NoWrap"
        >
            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="model:ArrivalEvent">
                    <Label
                        FlexLayout.Basis="Auto"
                        FontSize="{StaticResource Base}"
                        Margin="5,0"
                        TextColor="{StaticResource OnSecondaryContainer}"
                    >
                        <Label.Text>
                            <MultiBinding StringFormat="{}{0:0}m {1}s">
                                <Binding Path="EstimatedArrivalSpan.TotalMinutes" />
                                <Binding Path="EstimatedArrivalSpan.Seconds" />
                            </MultiBinding>
                        </Label.Text>
                    </Label>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
    </Grid>
</ContentView>
