<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    x:Class="NobUS.Frontend.MAUI.Presentation.View.AppShell"
    xmlns:local="clr-namespace:NobUS.Frontend.MAUI.Presentation.View"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="{StaticResource Surface}"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="{StaticResource Primary}"
    Shell.TabBarTitleColor="{StaticResource OnPrimary}"
>
    <TabBar>
        <ShellContent ContentTemplate="{DataTemplate local:StationsPage}" Title="Stations" />
        <ShellContent ContentTemplate="{DataTemplate local:StationsPage}" Title="About" />
    </TabBar>
</Shell>
